{
  "_ui": {
    "_fieldName": [
      {
        "label": "memory"
      }
    ],
    "_aggregationType": "max",
    "_index": [
      {
        "health": "green",
        "label": "kibana_sample_data_logs",
        "status": "open"
      }
    ],
    "_timeField": "timestamp",
    "_bucketUnitOfTime": "h",
    "_bucketValue": 12,
    "_watchType": "graph",
    "_thresholdEnum": "ABOVE",
    "_groupedOverFieldName": "bytes",
    "_groupedOverTop": 5,
    "_overDocuments": "all documents",
    "_thresholdValue": 10000
  },
  "trigger": {
    "schedule": {
      "monthly": [
        { "on": 23, "at": "12:00" }
      ]
    }
  },
  "checks": [
    {
      "type": "search",
      "name": "mysearch",
      "target": "mysearch",
      "request": {
        "indices": [
          "kibana_sample_data_logs"
        ],
        "body": {
          "size": 0,
          "aggregations": {
            "when": {
              "max": {
                "field": "memory"
              }
            }
          },
          "query": {
            "bool": {
              "filter": {
                "range": {
                  "timestamp": {
                    "gte": "now-12h",
                    "lte": "now"
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "type": "condition.script",
      "name": "mycondition",
      "source": "data.mysearch.aggregations.when.value > 10000"
    }
  ],
  "actions": [
    {
      "type": "webhook",
      "name": "myslack",
      "throttle_period": "1s",
      "request": {
        "method": "POST",
        "url": "https://hooks.slack.com/services/tockens",
        "body": "{\"text\": \"Memory usage encreased over the last 12h: {{data.mysearch.aggregations.when.value}}\"}",
        "headers": {
          "Content-type": "application/json"
        }
      }
    }
  ],
  "active": true,
  "log_runtime_data": false,
  "_id": "max_memory_graph"
}
